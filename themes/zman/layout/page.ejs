<% if (page.type) { %>
    <%- partial('partials/sidebar', { type: page.type, index: page.index }) %>
<% } else { %>
  <div class="sidebar">
    <ul class="main-menu">
      <%- partial('partials/main_menu', { context: 'sidebar' }) %>
    </ul>
  </div>
<% } %>
<div class="content <%- page.type ? page.type + ' with-sidebar' : '' %> <%- page.type === 'guide' ? page.path.replace(/.+\//, '').replace('.html', '') + '-guide' : '' %>">
    <% if (page.title.trim()) { %>
      <h1><%- page.title %><%- page.type === 'examples' ? ' Example' : '' %></h1>
    <% } %>
    <%- page.content %>
    <div class="footer">
      Caught a mistake or want to contribute to the documentation?
      <a href="https://github.com/zmanim/zmanim.github.io/blob/dev/src/<%- page.path.replace(/\.html$/, '.md') %>" target="_blank">
        Edit this page on Github!
      </a>
    </div>
</div>
